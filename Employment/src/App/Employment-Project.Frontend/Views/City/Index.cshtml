@using Employment_Project.Frontend.Models.ViewModel;
@model IEnumerable<Employment_Project.Frontend.Models.ViewModel.City>

@{
    ViewData["Title"] = "Index";
    int idno = 1;
}
<div class="container border mt-5 p-3">
    <p class="text-center">
        <a class="btn btn-primary" asp-action="AddorEdit"><i class="fa-solid fa-plus"></i> Create New</a>
    </p>
    <table id="cityTable" class="table table-bordered  table-striped table-responsive" style="width:100%">
        <thead>
            <tr>

                <th><span>#</span></th>
                <th><span>@nameof(City.StateName)</span></th>
                <th><span>@nameof(City.CityName)</span></th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@idno</td>
                    <td>@Html.DisplayFor(modelItem => item.StateName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CityName)</td>
                    <td>
                        <a class="btn btn-success btn-edit" data-id="@item.Id" href="javascript:void(0)"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                        <a class="btn btn-success" href="City/AddorEdit/@item.Id"><i class="fa-solid fa-pen-to-square"></i> Edit</a>

                        <a class="delete-button btn btn-danger" href="City/Delete/@item.Id" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                </tr>
                idno++;
            }
        </tbody>
    </table>
</div>
@section scripts{
<script>
  
    $(document).ready(function () {

        $(".btn-edit").on("click", function (e) {
            e.preventDefault();
            const id = $(this).data("id");
            let alink = $(`<a target="_blank" href='City/AddorEdit/${id}'>Click</a>`);
            $("body").append(alink);
            alink.click();

        });
    });
</script>

}