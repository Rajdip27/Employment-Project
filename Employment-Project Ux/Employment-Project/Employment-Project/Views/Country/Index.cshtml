@model IEnumerable<Employment_Project.Models.ViewModel.Country>

@{
    ViewData["Title"] = "Index";

    int idno = 1;

}


<div class="container">

    <p class="text-center">
        <a class=" btn btn-primary " asp-action="AddorEdit"><i class="fa-solid fa-plus"></i> Create New</a>
    </p>

    <div class="text-center">


        <table class="table mx-auto text-center w-50 table-bordered">
    <thead>
        <tr>
            <th>
               Id
            </th>
            <th>
                        Country Name
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @idno
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.countryName)
            </td>
            <td class="text-end">

                            <a class=" btn btn-primary" href="Country/AddorEdit/@item.id"><i class="fa-solid fa-pen-to-square"></i> Edit</a> |

                            <a class="delete-button btn btn-danger" href="Country/Delete/@item.id" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa-solid fa-trash"></i> Delete</a>
                 
            </td>
        </tr>

              // Increment the idno after each iteration
   
            idno++; // Increment the idno after each iteration
        }
            
        
       

       
    </tbody>
</table>
    </div>
</div>
