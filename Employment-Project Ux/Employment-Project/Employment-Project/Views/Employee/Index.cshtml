@model IEnumerable<Employment_Project.Models.ViewModel.Employee>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Employee Information</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Gender</th>
                <th>Department ID</th>
                <th>Joining Date</th>
                <th>SSC</th>
                <th>HSC</th>
                <th>BSC</th>
                <th>MSC</th>
                <th>Picture</th>
                <th>Country</th>
                <th>State</th>
                <th>City</th>
                <th>Department</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.departmentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.joiningDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sSC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hSC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.bSC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mSC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.picture)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.countryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.stateId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cityId)
                    </td>
                    <td>
                        <a class=" btn btn-primary" href="Country/AddorEdit/@item.id"><i class="fa-solid fa-pen-to-square"></i> Edit</a> |

                        <a class="delete-button btn btn-danger" href="Country/Delete/@item.id" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>

     </table>

</div>

